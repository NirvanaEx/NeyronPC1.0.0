<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cardview_option1_pc_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:text="PC Name"/>
            <ImageView
                android:id="@+id/cardview_option1_pc_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/cardview_option1_pc_name_tv"
                android:layout_margin="10dp"
                android:src="@drawable/testpc"/>
            <LinearLayout
                android:id="@+id/cardview_option1_character_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cardview_option1_pc_image"
                android:layout_below="@id/cardview_option1_pc_name_tv"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/cardview_option1_processor_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Processor"/>
                <TextView
                    android:id="@+id/cardview_option1_videocard_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Videocard"/>
                <TextView
                    android:id="@+id/cardview_option1_ram_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ram"/>
                <TextView
                    android:id="@+id/cardview_option1_ssd_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SSD"/>
                <TextView
                    android:id="@+id/cardview_option1_hdd_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HDD"/>
            </LinearLayout>
            <TextView
                android:id="@+id/cardview_option1_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/cardview_option1_character_container"
                android:layout_below="@id/cardview_option1_character_container"
                android:text="10.000.000 UZS"
                android:textColor="@color/green"/>
            
            <Button
                android:id="@+id/cardview_option1_incard_btn"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@drawable/rectangle_background_red"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text="@string/in_card"
                android:layout_below="@+id/cardview_option1_price_tv"
                android:layout_alignRight="@id/cardview_option1_price_tv"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>