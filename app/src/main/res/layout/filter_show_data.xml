<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/filter_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filter_main_filter_cardview"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/filter_count_result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/count_result"/>
        <TextView
            android:id="@+id/filter_count_result_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="10"
            android:textColor="@color/red"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <Button

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@drawable/rectangle_background_red"
        android:textColor="@color/white"
        android:text="@string/show"
        android:layout_below="@id/filter_results"
        android:layout_marginTop="10dp" />
</LinearLayout>